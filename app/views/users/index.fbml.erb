<p class="welcome">Hello <fb:name uid="<%= @facebook_id %>" />, welcome to Github on Facebook!</p>

<form action="<%= url_for(:action => 'create') %>" method="post">
    <%= hidden_field_tag 'user[facebook_id]', @facebook_id %>
    <fieldset>
        <legend>Add Github User</legend>
        <ol>
            <li>
                <label for="user_github_name">Github name:</label>
                <%= text_field_tag 'user[github_name]', '', :size => 20 %>
            </li>
            <li>
                <input type="submit" value="Add &raquo;" />
            </li>
        </ol>
    </fieldset>
</form>

<% unless @users.empty? %>
    <table>
        <caption>Github Accounts</caption>
        <thead>
            <tr>
                <th>Name</th>
                <th>Repositories</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.github_name %></td>
                    <td></td>
                    <td>
                        <%= link_to 'Edit', :action => :edit, :facebook_id => user.facebook_id, :github_name => user.github_name %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end %>